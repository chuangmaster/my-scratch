<h1>{{ blog.title }}</h1>

{% for article in blog.articles %}
  <div>
    <a href="{{article.url}}">
      <h2>{{ article.title }}</h2>
      <p>{{ article.author }}</p>
      <p>{{ article.excerpt }}</p>
      tags:
      {% for tag in article.tags -%}
        {{ tag }}
      {%- endfor %}
    </a>
  </div>
{% endfor %}